import java.awt.*;
import javax.swing.*;

public class News {
	String text;
	int count;
	
	News(String text) {
		this.text = text;
	}

	
	public void scroll(Graphics g) {
		g.setColor(Color.black);
		g.setFont(new Font("Times New Roman", Font.PLAIN, 30));
		for(int y = 0; y < 100; y++) {
			for(int i = 0; i < text.length()/55; i++) {
				try {
					Thread.sleep(16);
				} catch (Exception e) {
					
				}
				System.out.println("Print");
				g.drawString(text.substring(i*55, i*55+55), 50, 200+y*2+i*30);
			}
		}

	}
}